<h1>Create New Song</h1>

<form action="/songs" method="POST">
  <label>Song Name: </label>
  <input type="text" name="song[name]" id="Name">
  <br>
    
  <label for="artist_name">Artist :</label>
  <input type="text" name="artist[name]" id="Artist Name">
  <br>

  <h3>Genre(s)</h3>
  <% @genres.each do |genre| %>
    <input type="checkbox" name="genres[]" id="<%= genre.name %>" value="<%= genre.id %>"><%= genre.name %><br>
  <% end %>
  <br>

  <input type="submit" value="Create New Song">
</form>